<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <title>Entry Logging System - 사용자 앱</title>
  <!-- Favicon-->
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
  <!-- Font Awesome icons (free version)-->
  <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
  <!-- Google fonts-->
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
  <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet"
    type="text/css" />
  <!-- Core theme CSS (includes Bootstrap)-->
  <link href="/stylesheets/style.css" rel="stylesheet" />
</head>

<body id="page-top">
  <input type="hidden" id="account" value="<%= account %>">
  <!-- Navigation-->
  <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand js-scroll-trigger" href="#page-top">ENTRY LOGGING SYSTEM - 사용자</a>
      <button
        class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded"
        type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive"
        aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <!-- <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#portfolio">Portfolio</a></li> -->
            <% if (account === 'Person1') { %>
              <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="/logout">Logout</a></li>
            <% } else { %>
              <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" data-toggle="modal" data-target="#loginModal">Login</a></li>
            <% } %>
            
            <!-- <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#contact">Contact</a></li> -->
        </ul>
      </div>
    </div>
  </nav>
  <!-- Masthead-->
  <header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
      <!-- Masthead Avatar Image-->
      <img class="masthead-avatar mb-5" src="/images/avataaars.svg" alt="" />
      <!-- Masthead Heading-->
      <h1 class="masthead-heading text-uppercase mb-0">ENTRY LOGGING SYSTEM</h1>
      <!-- Icon Divider-->
      <div class="divider-custom divider-light">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
      </div>
      <!-- Masthead Subheading-->
      <p class="masthead-subheading font-weight-light mb-0">사용자 앱</p>
    </div>
  </header>
  <!-- Portfolio Section-->
  <section class="page-section portfolio" id="portfolio">
    <div class="container">
      <!-- Portfolio Section Heading-->
      <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Functions</h2>
      <!-- Icon Divider-->
      <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
      </div>
      <!-- Portfolio Grid Items-->
      <div class="row justify-content-center">
      <% if (account === 'Person1') { %>
        <!-- Portfolio Item 1-->
        <div class="col-md-6 col-lg-6 mb-5">
          <div class="portfolio-item mx-auto" id="btnQueryAllEntryLogs" data-toggle="modal" data-target="#queryAllEntryLogs">
            <div
              class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
              <div class="portfolio-item-caption-content text-center text-white">나의 모든 입장 내역 조회</div>
            </div>
            <img class="img-fluid" src="/images/portfolio/cabin.png" alt="" />
          </div>
        </div>
      <% } %>
    </div>
  </section>

  <!-- Copyright Section-->
  <div class="copyright py-4 text-center text-white">
    <div class="container"><small>Copyright © Your Website 2020</small></div>
  </div>
  <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes)-->
  <div class="scroll-to-top d-lg-none position-fixed">
    <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top"><i
        class="fa fa-chevron-up"></i></a>
  </div>
  <!-- Portfolio Modals-->
  <!-- Portfolio Modal 1-->
  <div class="portfolio-modal modal fade" id="queryAllEntryLogs" tabindex="-1" role="dialog"
    aria-labelledby="queryAllEntryLogsLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"><i class="fas fa-times"></i></span>
        </button>
        <div class="modal-body text-center">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-12">
                <!-- Portfolio Modal - Title-->
                <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0"
                  id="queryAllEntryLogsLabel">나의 모든 입장 내역 조회</h2>
                <!-- Icon Divider-->
                <div class="divider-custom">
                  <div class="divider-custom-line"></div>
                  <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                  <div class="divider-custom-line"></div>
                </div>

                <!-- Result Area -->
                <div class="text-center">
                  <p id="result"></p>
                  <p id="message"></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
 
  <!-- Login Modal -->
  <div class="portfolio-modal modal fade" id="loginModal" tabindex="-1" role="dialog"
    aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"><i class="fas fa-times"></i></span>
        </button>
        <div class="modal-body text-center">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-8">
                <!-- Portfolio Modal - Title-->
                <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0"
                  id="loginModalLabel">Login</h2>
                <!-- Icon Divider-->
                <div class="divider-custom">
                  <div class="divider-custom-line"></div>
                  <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                  <div class="divider-custom-line"></div>
                </div>
                <div class="control-group text-center">
                  <div class="form-group floating-label-form-group controls mb-0 pb-2">
                    <label>ID</label>
                    <input class="form-control text-center" id="txtID" type="text"
                      placeholder="ID" required="required"
                      data-validation-required-message="Please enter admin id." />
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <div class="control-group text-center">
                  <div class="form-group floating-label-form-group controls mb-5 pb-2">
                    <label>Password</label>
                    <input class="form-control text-center" id="txtPW" type="text"
                      placeholder="Password" required="required"
                      data-validation-required-message="Please enter admin password." />
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <div class="pb-5" id="alertLogin"></div>
                <div class="form-group">
                  <button class="btn btn-primary btn-xl" id="btnLogin">Login</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Bootstrap core JS-->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Third party plugin JS-->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
  <!-- Core theme JS-->
  <script src="/javascripts/scripts.js"></script>
  <script>
    $(function () {
      // 나의 모든 입장 내역 조회
      $('#btnQueryAllEntryLogs').click(async () => {
        const account = $('#account').val();
        const result = await fetch(`/api/entryLog/${account}`);
        const json = await result.json();
        
        let table = '<table class="table-report"><thead><tr><th>입장 ID</th><th>기관 ID</th><th>출생년도</th><th>성별</th><th>입장 시각</th><th>ID</th><th>이름</th><th>휴대폰</th><th>주소</th></tr></thead><tbody>';
        for(let i = 0; i < json.length; i++) {
          table += `<tr id="${i}">`;
          table += `<td>${json[i].EntryLogID}</td>`;
          table += `<td>${json[i].FacilityID}</td>`;
          table += `<td>${json[i].year}</td>`;
          table += `<td>${json[i].gender}</td>`;
          table += `<td>${json[i].entryTime}</td>`;
          table += `<td>${json[i].personalID}</td>`;
          table += `<td>${json[i].name}</td>`;
          table += `<td>${json[i].phone}</td>`;
          table += `<td>${json[i].address}</td>`;
          table += '</tr>';
        }
        table += '</tbody></table>'
        $('#queryAllEntryLogs #result').html(table);

      });
      
      // Highlight row
      $('.table-report tbody tr').hover(() => {
        $('.table-report tbody tr').removeClass('active-row');
        $(this).addClass('active-row');
      });

      // 신고 내역 조회
      $('#btnQueryReport').click(() => {
        $('#queryReport #txtReportNo').val('');
        $('#queryReport #result').html('');
      });

      $('#queryReport #btnQuery').click(async () => {
        const reportNo = $('#queryReport #txtReportNo').val();

        if(!reportNo) {
          $('#queryReport #result').html(`<font color="red">Please enter your report number.</font>`);
          return;
        }
        
        const result = await fetch(`/api/reports/${reportNo}`);

        if(!result.ok) {
          $('#queryReport #result').html(`<font color="red">Unable to query report with <b>${reportNo}</b>.</font>`);
          return;
        }

        const json = await result.json();
        
        let table = '<table class="table-report"><thead><tr><th>신고 ID</th><th>URL</th><th>홈페이지 이름</th><th>저작권 ID</th><th>게시자</th><th>신고자 Email</th><th>날짜</th><th>침해 형태</th><th>유사도</th><th>침해 여부</th></tr></thead><tbody>';
        table += '<tr>';
        table += `<td>${json.id}</td>`;
        table += `<td>${json.url}</td>`;
        table += `<td>${json.site}</td>`;
        table += `<td>${json.copyrightID}</td>`;
        table += `<td>${json.pirate}</td>`;
        table += `<td>${json.reporterEmail}</td>`;
        table += `<td>${json.date}</td>`;
        table += `<td>${json.form}</td>`;
        table += `<td>${json.similarity} %</td>`;
        table += `<td>${json.isPirated}</td>`;
        table += '</tr>';
        table += '</tbody></table>'
        $('#queryReport #result').html(table);
        // $('#resultQueryReport').html(`Unable to query report with ${reportNo}`);
      });

      // Create Report
      $('#btnCreateReport').click(() => {
        $('#createReport #txtReportNo').val('');
        $('#createReport #txtURL').val('');
        $('#createReport #txtSite').val('');
        $('#createReport #txtCopyrightNo').val('');
        $('#createReport #txtPirate').val('');
        $('#createReport #txtForm').val('');
        $('#createReport #txtEmail').val('');
        $('#createReport #result').html('');
      });

      $('#createReport #btnCreate').click(async () => {
        const body = {
          reportNo: $('#createReport #txtReportNo').val(),
          url: $('#createReport #txtURL').val(),
          site: $('#createReport #txtSite').val(),
          copyrightNo: $('#createReport #txtCopyrightNo').val(),
          pirate: $('#createReport #txtPirate').val(),
          form: $('#createReport #txtForm').val(),
          email: $('#createReport #txtEmail').val()
        }
        const result = await fetch('/api/reports', {
          method: 'POST',
          body: JSON.stringify(body),
          headers: { 'Content-Type': 'application/json' }
        });
        const json = await result.json();
        $('#createReport #result').html(json.msg);
      });

      // 저작권 번호로 신고 내역 조회
      $('#btnQueryReportsByCopyrightNo').click(() => {
        $('#queryReportsByCopyrightNo #txtCopyrightNo').val('');
        $('#queryReportsByCopyrightNo #result').html('');
      });

      $('#queryReportsByCopyrightNo #btnQuery').click(async () => {
        const copyrightNo = $('#queryReportsByCopyrightNo #txtCopyrightNo').val();
        const result = await fetch(`/api/reports/copyrights/${copyrightNo}`);
        const json = await result.json();
        let table = '<table class="table-report"><thead><tr><th>신고 ID</th><th>URL</th><th>홈페이지 이름</th><th>저작권 ID</th><th>게시자</th><th>신고자 Email</th><th>날짜</th><th>침해 형태</th><th>유사도</th><th>침해 여부</th></tr></thead><tbody>';
        for(let i = 0; i < json.length; i++) {
          table += '<tr>';
          table += `<td>${json[i].Key}</td>`;
          table += `<td>${json[i].Record.url}</td>`;
          table += `<td>${json[i].Record.site}</td>`;
          table += `<td>${json[i].Record.copyrightID}</td>`;
          table += `<td>${json[i].Record.pirate}</td>`;
          table += `<td>${json[i].Record.reporterEmail}</td>`;
          table += `<td>${json[i].Record.date}</td>`;
          table += `<td>${json[i].Record.form}</td>`;
          table += `<td>${json[i].Record.similarity} %</td>`;
          table += `<td>${json[i].Record.isPirated}</td>`;
          table += '</tr>';
        }
        table += '</tbody></table>';
        $('#queryReportsByCopyrightNo #result').html(table);
      });

      $('#btnLogin').click(async () => {
        const id = $('#txtID').val();
        const pw = $('#txtPW').val();
        const result = await fetch(`/login`, {
          method: 'POST',
          body: JSON.stringify({ id: id, pw: pw }),
          headers: { 'Content-Type': 'application/json' }
        });
        const json = await result.json();
        if(!json.ok) {
          $('#alertLogin').html(`<font color="red">${json.msg}</font>`);
          return;
        }
        location.replace('/');
      });
    });
  </script>
</body>

</html>